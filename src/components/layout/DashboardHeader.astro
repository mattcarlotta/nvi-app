---
import AccountDropdown from "./AccountDropdown";

interface Props {
    userName?: string;
}

const { userName } = Astro.props;
---

<div class="flex justify-center items-center bg-gray-800">
    <nav class="w-full max-w-main flex py-3 px-2">
        <div class="flex-1">
            <a class="block py-1" href="/">Home</a>
        </div>
        <div>
            <AccountDropdown client:load userName={userName} />
        </div>
    </nav>
</div>
