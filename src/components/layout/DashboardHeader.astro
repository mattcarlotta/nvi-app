---
import LogoutButton from "./LogoutButton.astro";

interface Props {
    user?: string;
}

const { user } = Astro.props;
---

<div class="flex justify-center items-center bg-gray-800">
    <nav class="w-full max-w-main flex py-4">
        <div class="flex-1">
            <a href="/">Home</a>
        </div>
        <ul class="flex space-x-4">
            <li>
                <LogoutButton />
            </li>
            <li>
                <a href="/settings/">{user}</a>
            </li>
        </ul>
    </nav>
</div>
