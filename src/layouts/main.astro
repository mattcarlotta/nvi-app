        <!--   content="A fullstack developer who is passionate about open-source projects, helping the web development community, and building SEO optimized applications" -->
        <!-- /> -->
        <!-- <meta property="og:image:type" content="image/webp" /> -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;500;700;900&display=swap"
            rel="stylesheet"
        />
        <style is:inline>
            body,
            html {
                height: 100%;
                width: 100%;
            }

            body {
                color: #fff;
                margin: 0;
                background-color: rgb(1 0 7 / 1);
                background-repeat: no-repeat;
                font-family:
                    Inter,
                    -apple-system,
                    BlinkMacSystemFont,
                    Segoe UI,
                    Roboto,
                    Oxygen,
                    Ubuntu,
                    Cantarell,
                    Fira Sans,
                    Droid Sans,
                    Helvetica Neue,
                    sans-serif;
            }

            .navbar {
                display: flex;
                flex-direction: row;
                list-style: none;
            }

            * {
                box-sizing: border-box;
                -ms-overflow-style: none;
                scrollbar-width: none;
            }

            ::-webkit-scrollbar {
                display: none;
            }

            :-moz-focus-inner {
                border-width: 0px;
            }

            :focus-visible {
                color: #fff;
                outline-style: dotted !important;
                outline-width: 2px;
                outline-offset: 2px;
                outline-color: #008ef1 !important;
            }

            img,
            svg,
            iframe {
                vertical-align: middle;
                display: initial !important;
            }
        </style>
        <title>{documentTitle}</title>
    </head>
    <body>
        <Toast client:load />
        <nav class="flex justify-center">
            <ul class="flex space-x-4">
                {
                    [
                        {
                            title: "Home",
                            href: "/",
                        },
                        {
                            title: "Login",
                            href: "/login/",
                        },
                        {
                            title: "About",
                            href: "/about/",
                        },
                    ].map(({ href, title }) => (
                        <li>
                            <a class="header-link" href={href}>
                                {title}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
        <main id="main" class="mx-auto w-full max-w-main p-2.5 pt-12">
            <div>
                <slot />
            </div>
            <footer>
                <p>
                    &#169;{new Date().getFullYear()} Matt Carlotta
                </p>
            </footer>
        </main>
    </body>
</html>
